import Foundation

enum Carmodel: String{
    case ford = "Форд"
    case toyota = "Тойота"
    case volkswagen = "фольксваген"
}
enum Typecar: String {
    case sport = "Спорткар"
    case trunk = "Грузовик"
}


enum Window: String {
    case open = "Окно открыто"
    case close = "Окно закрыто"
}
enum EngType: String{
